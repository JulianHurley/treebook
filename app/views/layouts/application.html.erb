<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top navbar-inner">
	<div class="container">
		<%= link_to "Treebook", feed_path, class: "brand" %>

		<ul class="nav">
			<li><%= link_to "All Statuses", feed_path %></li>

		</ul>
		<% if user_signed_in? %>
		<ul class="nav">
			<li><%= link_to current_user.full_name, new_status_path %></li>
		</ul>

			<%= link_to "Sign Out", logout_path, class: "btn btn-danger pull-right" %>
		<% else %>
			<%= link_to "Log In", login_path, class: "btn btn-warning pull-right" %>
			<%= link_to "Register", register_path, class: "btn btn-info pull-right" %>
		<% end %>

	</div>
</div>
<div class="container">
	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>">
			<button class="close" data-dismiss="alert">x</button>
			<%= message %>
		</div>
	<% end %>
	<%= yield %>
</div>
</body>
</html>
